<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.kafka1.mapper.ProductMapper">
  <select id="selectProductById" resultType="com.example.kafka1.entity.response.ProductResponse">
    SELECT * FROM products WHERE id = #{id}
  </select>
  <insert id="insertProduct" parameterType="com.example.kafka1.entity.request.ProductRequest">
    INSERT INTO products(id, name, status, dirty) VALUES (#{id}, "${name}", #{status}, #{dirty})
  </insert>
</mapper>
